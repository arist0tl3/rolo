---
import '../styles/global.css';

type Props = {
  title?: string;
  description?: string;
};

const { title = 'Rolo', description = 'Rolo contacts' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    {import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY ? (
      <script
        src={`https://maps.googleapis.com/maps/api/js?key=${import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY}&libraries=places`}
        async
        defer
      />
    ) : null}
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
